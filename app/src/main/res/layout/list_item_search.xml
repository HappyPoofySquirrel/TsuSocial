<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/search_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/search_item_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/search_item_iv"
        app:layout_constraintTop_toTopOf="@id/search_item_iv"
        tools:text="username" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/search_item_verified_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/search_item_username_tv"
        app:layout_constraintTop_toBottomOf="@id/search_item_username_tv"
        tools:text="Verified" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/search_item_fullname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/search_item_username_tv"
        app:layout_constraintTop_toBottomOf="@id/search_item_verified_tv"
        tools:text="Full Name" />

</androidx.constraintlayout.widget.ConstraintLayout>